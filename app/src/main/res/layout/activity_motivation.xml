<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MotivationActivity">

    <TextView
        android:id="@+id/quo_tv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:text="I THINK MUSIC IN ITSELF IS A HEALING..."
        app:layout_constraintBottom_toTopOf="@id/quo1_iv"/>
    <ImageView
        android:id="@+id/quo1_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/quo_drm"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/quo_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/quo2_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/quo_happy"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/quo1_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/youtube_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Watch Video"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@id/chat_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quo2_iv" />
    <Button
        android:id="@+id/chat_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_bg"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Need Personal help???"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtube_btn" />
</android.support.constraint.ConstraintLayout>